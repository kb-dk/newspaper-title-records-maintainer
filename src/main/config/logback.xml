<configuration>

    <property name="LOGFILE" value="${user.home}/logs/title-record-maintainer.log"/>
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <prudent>true</prudent>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>${LOGFILE}.%d{yyyy-MM-dd}</fileNamePattern>
            <!-- keep 30 days' worth of history -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <append>true</append>
        <!-- encoders are assigned the type
                                   ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%date{ISO8601} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="EMAIL" class="ch.qos.logback.classic.net.SMTPAppender">
        <smtpHost>{stmp.host}</smtpHost>
        <smtpPort>25</smtpPort>
        <to>{email.titleRecords.recipient.address}</to>
        <!-- repeat <to> to add additional recipients  -->
        <from>{email.titleRecords.sender.address}</from>
        <subject>Newspaper Title Record Maintainer failed: %logger{20} - %m</subject>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%date{ISO8601} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </layout>
    </appender>


    <logger name="dk.statsbiblioteket.medieplatform.autonomous.AutonomousWorker" level="ERROR">
        <appender-ref ref="EMAIL"/>
    </logger>
    <logger name="dk.statsbibliokeket" level="INFO"/>
    <root level="WARN">
        <appender-ref ref="FILE"/>
    </root>

</configuration>
